{
  "manifest_version": 3,
  "name": "Smart.pr Labs",
  "version": "0.2.1",
  "description": "Smart.pr Labs â€“ includes the Angle Assistant to suggest newsworthy story angles inside Smart.pr.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://api.openai.com/*"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
  "service_worker": "background.js"
},

  "options_page": "options.html",

  "content_scripts": [
    {
      "matches": [
        "https://smart.pr/*",
        "https://*.smart.pr/*",
        "https://dontest.smart.pr/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
